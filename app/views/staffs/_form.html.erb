<%= form_for(@staff) do |f| %>

<!--error message start -->
<% if @staff.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h3><%= @staff.errors.count %> errors</h3>
    <ul>
    <% @staff.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<!--error message end -->

<div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</div>
    
<div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
</div>
    
<div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday,:start_year=>1900 %>
</div>
    
<div class="field">
    <%= f.label :job %><br>
    <%= f.text_field :job %>
</div>
    
<div class="field">
    <%= f.label :region %><br>
    <%= f.text_field :region %>
</div>
    
<div class="field">
    <%= f.label :memo %><br>
    <%= f.text_area:memo%>
</div>

<div class="field">
    <% if @staff.image? %>
      <div class="thumbnail">
        <%= image_tag @staff.image.url %>
      </div>
    <% end %><br>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
</div>

<div class="field">
    <div class="action ">
    <%= f.submit %>
    </div>
</div>
<% end %>